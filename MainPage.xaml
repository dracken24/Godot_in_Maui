<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlatformGame.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                x:Name="MainImage"
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />

            <Label
                Text="Platform Game"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Meilleurs temps de completion"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2" />

            <VerticalStackLayout Padding="20">
                <Button Text="Lancer le jeu Godot" 
                    Command="{Binding LaunchGodotCommand}"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"/>
                <Button Text="Actualiser les résultats" 
                    Command="{Binding LoadResultsCommand}"
                    Margin="0,10,0,0"/>
            </VerticalStackLayout>

            <!-- Statistiques -->
            <Frame Padding="15" Margin="0,10,0,0" BackgroundColor="#F0F0F0">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Statistiques" FontSize="18" FontAttributes="Bold" TextColor="Gray" />
                    <Label Text="{Binding StatsText}" TextColor="Gray" />
                </VerticalStackLayout>
            </Frame>

            <!-- Meilleur temps -->
            <Frame Padding="15" Margin="0,10,0,0" BackgroundColor="#E8F5E9">
                <VerticalStackLayout Spacing="10">
                    <Label Text="🏆 Meilleur temps" FontSize="18" FontAttributes="Bold" TextColor="Gray" />
                    <Label Text="{Binding BestTimeText}" TextColor="Gray" />
                </VerticalStackLayout>
            </Frame>

            <!-- Top 10 -->
            <Frame Padding="15" Margin="0,10,0,0">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Top 10 des meilleurs temps" FontSize="18" FontAttributes="Bold" />
                    <Label Text="{Binding TopResultsText}" />
                </VerticalStackLayout>
            </Frame>

            <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" Margin="0,20,0,0" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
